# Alpaca API Keys (get from https://app.alpaca.markets)
# Set these as OS environment variables or in a .env file (gitignored)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=

# Set to "paper" for paper trading, "live" for real money
TRADING_MODE=paper

# Alpha Vantage (optional, for supplementary data)
ALPHA_VANTAGE_API_KEY=

# Storage backend: "sqlite", "parquet", or "databricks"
STORAGE_BACKEND=sqlite

# Short selling: "true" to allow, "false" to disable
DOES_SHORT=true

# Databricks (future use)
# DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
# DATABRICKS_TOKEN=
# DATABRICKS_CATALOG=main
# DATABRICKS_SCHEMA=trading
